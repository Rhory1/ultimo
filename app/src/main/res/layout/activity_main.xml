<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnActivar"
        android:layout_width="136dp"
        android:layout_height="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="96dp"
        android:text="ACTIVAR"
        app:layout_constraintBottom_toTopOf="@+id/btnConectar"
        app:layout_constraintEnd_toStartOf="@+id/btnDesactivar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/btnDesactivar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="68dp"
        android:text="DESACTIVAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spnDispositivos"
        android:layout_width="151dp"
        android:layout_height="69dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnConectar"
        app:layout_constraintTop_toBottomOf="@+id/btnDesactivar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnConectar"
        android:layout_width="150dp"
        android:layout_height="69dp"
        android:layout_marginBottom="424dp"
        android:text="CONECTAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spnDispositivos"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="271dp"
        android:layout_height="31dp"
        android:text="CONECTE SU DISPOSITIVO"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textColorHighlight="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="109dp"
        android:layout_height="68dp"
        android:layout_marginStart="120dp"
        android:text="BUSCAR"
        app:layout_constraintBottom_toBottomOf="@+id/spnDispositivos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/spnDispositivos"
        app:layout_constraintTop_toTopOf="@+id/spnDispositivos" />

    <TextView
        android:id="@+id/txtEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnDispositivos" />
</androidx.constraintlayout.widget.ConstraintLayout>